<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:gravity="center"
    android:background="@color/transparency_500"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:padding="5dp"
        android:orientation="vertical"
        android:layout_marginRight="50dp"
        android:layout_marginLeft="50dp"
        android:background="@drawable/shape_cicle_white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
            <TextView
                android:layout_margin="@dimen/margin_left"
                android:textSize="@dimen/text_size_medium"
                android:textColor="@color/colorPrimary"
                android:text="端口号"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <android.support.design.widget.TextInputLayout
                android:id="@+id/tl_port_input"
                android:layout_marginLeft="@dimen/margin_left"
                android:layout_marginRight="@dimen/margin_left"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <android.support.design.widget.TextInputEditText
                    android:id="@+id/te_port_input"
                    android:maxLength="4"
                    android:inputType="number"
                    android:hint="端口号"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

            </android.support.design.widget.TextInputLayout>

        <View
            android:layout_marginTop="10dp"
            android:background="@color/gray_224"
            android:layout_width="match_parent"
            android:layout_height="1px"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="35dp">
            <Button
                android:id="@+id/btn_port_cancel"
                android:textSize="@dimen/text_size_large"
                android:textColor="@color/colorPrimary"
                android:background="@drawable/select_white2gray"
                android:text="取消"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content" />
            <View
                android:background="@color/gray_224"
                android:layout_width="1px"
                android:layout_height="match_parent"/>
            <Button
                android:id="@+id/btn_port_sure"
                android:textSize="@dimen/text_size_large"
                android:textColor="@color/colorPrimary"
                android:background="@drawable/select_white2gray"
                android:text="确定"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content" />
        </LinearLayout>

    </LinearLayout>

</LinearLayout>